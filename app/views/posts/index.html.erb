<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
